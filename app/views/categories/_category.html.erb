<%= turbo_frame_tag category do %>
  <div class="col">
    <div class="card rounded-pill">
      <div class="card-body d-flex justify-content-between align-items-center">
        <p class="m-0 ps-3 w-75 d-flex justify-content-start"><%= category.name %></p>

        <div class="btn-group d-flex align-items-center" role="group">
          <%= link_to 'Edit', edit_category_path(category),
            class: 'btn btn-secondary rounded-circle aspect-ratio-1 d-flex align-items-center' %>
          <%= link_to 'Delete', category_path(category),
            class: 'btn btn-danger rounded-circle aspect-ratio-1 d-flex align-items-center',
            data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
        </div>
      </div>
    </div>
  </div>
<% end %>