<%= turbo_frame_tag category do %>
  <%= form_with model: category do |f| %>
    <%= render 'devise/shared/error_messages', resource: category %>

    <div class="col">
      <div class="card rounded-pill">
        <div class="card-body d-flex justify-content-between align-items-center">
          <%= f.text_field :name,
            class: "form-control w-75 rounded-pill", placeholder: name, value: '' %>

          <%= f.submit 'Submit',
            class: 'btn btn-success rounded-circle aspect-ratio-1 d-flex align-items-center' %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>