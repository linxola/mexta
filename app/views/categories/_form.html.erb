<%= form_with model: category do |f| %>
  <div class="col">
    <div class="card rounded-pill">
      <div class="card-body d-flex justify-content-between align-items-center">
        <div class="input-group m-0 ps-2 w-75">
          <div class="form-floating <%= 'is-invalid' if category.errors.include?(:name) %>">
            <%= f.text_field :name,
              class: "form-control w-75 rounded-pill #{'is-invalid' if category.errors.include?(:name)}",
              placeholder: 'Category name', required: true %>
            <%= f.label :name, 'Category name' %>
          </div>
          <%= render 'shared/errors', object: category, field: :name %>
        </div>
        <%= f.submit 'Submit',
          class: 'btn btn-success rounded-circle aspect-ratio-1 d-flex align-items-center' %>          
      </div>
    </div>
  </div>
<% end %>